<Window x:Class="Fileseperator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fileseperator"
        mc:Ignorable="d"
        Title="MainWindow" Height="225" Width="400">
    <Grid>
        <StackPanel Margin="10,0,10,0">
            <Label>File</Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="filePath" />
                <Button Grid.Column="1" Width="50" Content="..." Click="Button_Click" />
            </Grid>
            <Label>Output location</Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="output" />
                <Button Grid.Column="1" Width="50" Content="..." HorizontalAlignment="Right" Margin="0,0,-0.4,0.2" Click="Button_Click_2" />
            </Grid>
            <Button Margin="10" Content="GO" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
